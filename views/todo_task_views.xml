<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="todo_task_list_view" model="ir.ui.view">
        <field name="name">todo.task.list</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <list string="To-Do Tasks">
                <field name="name"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="due_date"/>
                <field name="category_id"/>
                <field name="assigned_user_id"/>
                <field name="progress" widget="progressbar"/>
            </list>
        </field>
    </record>

    <record id="todo_task_form_view" model="ir.ui.view">
        <field name="name">todo.task.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form string="To-Do Task">
                <header>
                    <button name="action_set_in_progress" type="object" string="Start Task" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_set_done" type="object" string="Mark as Done" invisible="state != 'in_progress'" class="btn-primary"/>
                    <button name="action_set_cancelled" type="object" string="Cancel Task" invisible="state not in ('draft', 'in_progress')" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="priority"/>
                        <field name="due_date"/>
                        <field name="category_id"/>
                        <field name="assigned_user_id"/>
                        <field name="progress" widget="progressbar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="todo_task_kanban_view" model="ir.ui.view">
        <field name="name">todo.task.kanban</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="due_date"/>
                <field name="category_id"/>
                <field name="assigned_user_id"/>
                <field name="progress"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong><br/>
                                <field name="priority"/><br/>
                                <field name="due_date"/><br/>
                                <field name="category_id"/><br/>
                                <field name="assigned_user_id"/>
                                <div class="oe_kanban_footer">
                                    <field name="progress" widget="progressbar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_todo_task" model="ir.actions.act_window">
        <field name="name">To-Do Tasks</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>